@page "/";
@inject GamesClient Client;

<PageTitle>Game Catalog</PageTitle>

<div class="mt-2">
    <a href="/editgame" class="btn btn-primary" role="button">New Game</a>
</div>

@if (games is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped table-bordered table-hover mt-4">
        <thead class="table-dark">
            <th>Id</th>
            <th>Name</th>
            <th>Genre</th>
            <th class="text-end">Price</th>
            <th>Release date</th>
            <th>Actions</th>
        </thead>
        <tbody>
            @foreach (var game in games)
            {
                <tr>
                    <td>@game.Id</td>
                    <td>@game.Name</td>
                    <td>@game.Genre</td>
                    <td class="text-end">@game.Price.ToString("C2")</td>
                    <td>@game.ReleaseDate</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-primary me-2" role="button" href="@GameUrl(game.Id)">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(game)"
                                role="button">
                                <i class="bi bi-trash"></i>
                            </a>
                            <DeleteGame Game="@game" />
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private GameSummary[]? games;

    protected override void OnInitialized()
    {
        games = Client.GetGames();
    }

    private static string GameUrl(int id) => $"/editgame/{id}";

    private static string GetDeleteModalId(GameSummary game)
    {
        return $"#{DeleteGame.GetModalId(game)}";
    }
}
